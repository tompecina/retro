		includes="JoystickPanel.makegraphics"/>
    <srcfileset dir="${graphics.dir}/jstick"
		includes="mask.png"/>
    <targetfilelist dir="${resources.dir}/${prefix}/jstick/JoystickPanel"
		    files="mask-1.png"/>
  </dependset>
  <available file="${resources.dir}/${prefix}/jstick/JoystickPanel/mask-1.png"
	     property="avail.jstick.JoystickPanel"/>
  <target name="jstick.JoystickPanel"
	  unless="avail.jstick.JoystickPanel">
